<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.paulpwo.delivery305.manager.ManagerDetailNotice"
        tools:showIn="@layout/activity_manager_detail_notice"
        android:fitsSystemWindows="true">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cardview_light_background"
        android:paddingLeft="5dp"
        android:paddingRight="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Medium Text"
            android:id="@+id/name"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:lines="2"
            android:textStyle="bold"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Address:"
            android:id="@+id/textView5"
            android:layout_below="@+id/driver_address"
            android:layout_centerHorizontal="true"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/driver_address"
            android:gravity="left"
            android:lines="3"
            android:layout_below="@+id/name"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Delivery to:"
            android:id="@+id/textView3"
            android:layout_below="@+id/driver_address"
            android:layout_centerHorizontal="true"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/delivery_address"
            android:gravity="left"
            android:lines="3"
            android:layout_below="@+id/textView3"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Time:"
            android:id="@+id/textView6"
            android:layout_below="@+id/driver_address"
            android:layout_centerHorizontal="true"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/tvOnlineTime"
            android:layout_below="@+id/delivery_address"
            android:layout_alignRight="@+id/delivery_address"
            android:layout_alignEnd="@+id/delivery_address"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary2" />



        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:text="Call to Restaurant"
            android:id="@+id/btn_call_restaurant"
            android:layout_below="@+id/tvOnlineTime"
            android:layout_centerHorizontal="true"
            android:background="@drawable/my_button_orange"
            android:textColor="@color/white"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="15dp"
            android:drawableLeft="@drawable/ic_call_white_24dp"
            />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:text="Assign driver"
            android:id="@+id/btnAssignDriver"
            android:background="@drawable/my_button_blue"
            android:textColor="@color/white"
            android:layout_below="@+id/btn_call_restaurant"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/ic_stars_white_24dp"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="45dp"
            android:text="Delete"
            android:id="@+id/button"
            android:background="@drawable/my_button_gray"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="5dp"
            android:drawableLeft="@drawable/ic_delete_white_18dp"/>
        </LinearLayout>

</ScrollView>
