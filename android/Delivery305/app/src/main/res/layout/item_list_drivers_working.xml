<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:http="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="159dp"
    android:layout_gravity="center_horizontal|top"
    android:padding="5dip"
    android:id="@+id/item_layout_container"
    FrameLayout:cardCornerRadius="20dip"
    xmlns:FrameLayout="http://schemas.android.com/tools"
    android:background="@drawable/selector_row">



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:id="@+id/img_back" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="10:05AM"
        android:id="@+id/tvOnlineTime"
        android:layout_gravity="right|top"
        android:textStyle="bold"
        android:textSize="13dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/img_back"
        android:layout_alignEnd="@+id/img_back" />

    <TextView
        android:layout_width="203dp"
        android:layout_height="38dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tvName"
        android:layout_gravity="center_horizontal|top"
        android:textSize="14sp"
        android:layout_below="@+id/textView2"
        android:layout_toRightOf="@+id/id_delivery"
        android:layout_alignRight="@+id/tvAddress"
        android:layout_alignEnd="@+id/tvAddress" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Address:"
        android:id="@+id/textView4"
        android:layout_gravity="center_vertical|left"
        android:textSize="11dp"
        android:textStyle="bold"
        android:layout_below="@+id/tvName"
        android:layout_toRightOf="@+id/id_delivery"
        android:layout_toEndOf="@+id/id_delivery" />

    <TextView
        android:layout_width="238dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/tvAddress"
        android:textColor="@color/colorPrimaryDark"
        android:layout_gravity="center_horizontal|bottom"
        android:textSize="14sp"
        android:maxLines="2"
        android:minLines="2"
        android:lines="2"
        android:layout_below="@+id/textView4"
        android:layout_alignLeft="@+id/textView4"
        android:layout_alignStart="@+id/textView4"
        android:layout_toStartOf="@+id/tvOnlineTime"
        android:layout_alignRight="@+id/img_back"
        android:layout_alignEnd="@+id/img_back" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Name"
        android:id="@+id/textView2"
        android:layout_gravity="center_vertical|left"
        android:textSize="12dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:id="@+id/id_delivery"
        android:visibility="invisible"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Online time:"
        android:id="@+id/textView7"
        android:layout_gravity="center_vertical|left"
        android:textSize="12dp"
        android:textStyle="bold"
        android:layout_alignTop="@+id/img_back"
        android:layout_alignRight="@+id/textView10"
        android:layout_alignEnd="@+id/textView10" />

    <TextView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="100"
        android:id="@+id/tvCount"
        android:background="@drawable/my_button_yellow"
        android:textColor="@color/white"
        android:gravity="center"
        android:layout_gravity="left|top"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/img_back"
        android:layout_alignEnd="@+id/img_back"
        android:layout_below="@+id/tvAddress"
        android:layout_alignLeft="@+id/tvOnlineTime"
        android:layout_alignStart="@+id/tvOnlineTime" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Deliveries:"
        android:id="@+id/textView10"
        android:layout_gravity="center_vertical|left"
        android:textSize="11dp"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/tvCount"
        android:layout_alignBottom="@+id/tvCount"
        android:layout_toLeftOf="@+id/tvCount"
        android:layout_toStartOf="@+id/tvCount"
        android:layout_marginRight="5dp" />
    <TextView
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:visibility="invisible"
        android:id="@+id/id"/>

</RelativeLayout>
